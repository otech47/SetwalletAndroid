<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="@dimen/medium"
        android:layout_margin="@dimen/medium"
        android:id="@+id/store_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="@dimen/medium"
        android:id="@+id/store_favorite_icon"
        android:layout_margin="@dimen/tiny"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small"
        android:layout_marginLeft="@dimen/small"
        android:textSize="@dimen/text_medium"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Store Name"
        android:layout_toEndOf="@+id/store_icon"
        android:id="@+id/store_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="@dimen/small"
        android:layout_marginStart="@dimen/small"
        android:textSize="@dimen/text_small"
        android:text="Message"
        android:textColor="@color/material_grey_900"
        android:id="@+id/message"
        android:layout_toStartOf="@id/store_favorite_icon"
        android:layout_alignBottom="@+id/store_icon"
        android:layout_toEndOf="@+id/store_icon"/>




</RelativeLayout>